<%- include('../partials/header') %>

<div class="cat-container">
    <div class="cat-title">
        <h2>Chinchillas for Adoption</h2>
    </div>
    <div class="cat-gallery">

       <% for (let pet of pets) { %>
           <% if (pet.category == "chinchilla") { %>
        <div class="gallery-tile">
            <a href="/pets/<%= pet._id %>">
            <img src="<%= pet.photo %>">
            </a>
            <h4 class="cat-name"><%= pet.name %></h4>
            <br />
            <h4><%= pet.age %></h4>
            <h4><%= pet.sex %></h4>
            <h4><%= pet.location %></h4>
        </div>
        <% } %>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>